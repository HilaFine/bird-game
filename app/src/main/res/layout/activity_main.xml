<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_700"
    tools:context=".MainActivity">

     <androidx.appcompat.widget.AppCompatImageView
         android:id="@+id/game_background"
         android:layout_width="match_parent"
         android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/hearts"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart2" />
    </LinearLayout>
     <LinearLayout
         android:id="@+id/cats_row0"
         android:layout_width="match_parent"
         android:layout_height="70dp"
          android:layout_below="@+id/hearts"
         android:layout_marginHorizontal="20dp"
         android:layout_marginTop="15dp">

         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col0"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             app:srcCompat="@drawable/happy"/>

         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             app:srcCompat="@drawable/happy" />

         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col2"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             app:srcCompat="@drawable/happy" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/cats_row1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/cats_row0">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row1_col0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/happy" />
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row1_col1"
             android:layout_width="0dp"
             android:layout_height="match_parent"
             android:layout_weight="1"
             app:srcCompat="@drawable/happy"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row1_col2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/happy"/>
    </LinearLayout>
      <LinearLayout
          android:id="@+id/cats_row2"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginHorizontal="20dp"
          android:layout_below="@+id/cats_row1">
      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/cat_row2_col0"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/happy"/>
      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/cat_row2_col1"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/happy"  />
      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/cat_row2_col2"
          android:layout_width="0dp"
          android:layout_height="match_parent"
          android:layout_weight="1"
          app:srcCompat="@drawable/happy"    />
      </LinearLayout>

        <LinearLayout
            android:id="@+id/cats_row3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/cats_row2">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col0"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/happy" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/happy" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:src="@drawable/happy" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cats_row4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/cats_row3">
           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/cat_row4_col0"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               app:srcCompat="@drawable/happy"/>
           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/cat_row4_col1"
               android:layout_width="0dp"
               android:layout_height="match_parent"
               android:layout_weight="1"
               app:srcCompat="@drawable/happy"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row4_col2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                app:srcCompat="@drawable/happy"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cats_row5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/cats_row4">
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/cat_row5_col0"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/happy"/>
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/cat_row5_col1"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/happy"/>
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/cat_row5_col2"
                 android:layout_width="0dp"
                 android:layout_height="match_parent"
                 android:layout_weight="1"
                 app:srcCompat="@drawable/happy"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/cats_row6"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/cats_row5">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col0"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/happy"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/happy"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/happy"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/birds"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/game_fabRight"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp">
       <com.google.android.material.imageview.ShapeableImageView
           android:id="@+id/bird0"
           android:layout_width="0dp"
           android:layout_height="match_parent"
           android:layout_weight="1"
           app:srcCompat="@drawable/bird2"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bird1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/bird2"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bird2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/bird2"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_fabRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/right"
        android:contentDescription="@string/app_name"
        android:clickable="true"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_fabLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/left"/>

        
        
</RelativeLayout>