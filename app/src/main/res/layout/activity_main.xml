<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/purple_200"
    tools:context="com.example.birdsGameEx2.Activities.MainActivity">

     <androidx.appcompat.widget.AppCompatImageView
         android:id="@+id/game_background"
         android:layout_width="match_parent"
         android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/hearts"
        android:layout_width="100dp"
        android:layout_height="30dp"
        android:layout_alignParentEnd="true">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_heart1"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_heart2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginHorizontal="10dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart2" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/game_heart3"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            app:srcCompat="@drawable/heart2" />
    </LinearLayout>
     <LinearLayout
         android:id="@+id/cats_row0"
         android:layout_width="match_parent"
         android:layout_height="70dp"
          android:layout_below="@+id/hearts"
         android:layout_marginHorizontal="20dp"
         android:layout_marginTop="15dp">

         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col0"
             style="@style/cat"/>
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col1"
             style="@style/cat" />
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col2"
             style="@style/cat" />
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col3"
             style="@style/cat" />
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row0_col4"
             style="@style/cat" />
     </LinearLayout>

    <LinearLayout
        android:id="@+id/cats_row1"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/cats_row0">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row1_col0"
            style="@style/cat" />
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/cat_row1_col1"
             style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row1_col2"
            style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row1_col3"
            style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row1_col4"
            style="@style/cat"/>
    </LinearLayout>
      <LinearLayout
          android:id="@+id/cats_row2"
          android:layout_width="match_parent"
          android:layout_height="90dp"
          android:layout_marginHorizontal="20dp"
          android:layout_below="@+id/cats_row1">
      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/cat_row2_col0"
          style="@style/cat"/>
      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/cat_row2_col1"
          style="@style/cat"  />
      <com.google.android.material.imageview.ShapeableImageView
          android:id="@+id/cat_row2_col2"
          style="@style/cat"   />
          <com.google.android.material.imageview.ShapeableImageView
              android:id="@+id/cat_row2_col3"
              style="@style/cat"   />
          <com.google.android.material.imageview.ShapeableImageView
              android:id="@+id/cat_row2_col4"
              style="@style/cat"   />
      </LinearLayout>

        <LinearLayout
            android:id="@+id/cats_row3"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/cats_row2">
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col0"
                style="@style/cat"  />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col1"
                style="@style/cat"  />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col2"
                style="@style/cat" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col3"
                style="@style/cat" />
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row3_col4"
                style="@style/cat" />
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cats_row4"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/cats_row3">
           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/cat_row4_col0"
               style="@style/cat"/>
           <com.google.android.material.imageview.ShapeableImageView
               android:id="@+id/cat_row4_col1"
               style="@style/cat"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row4_col2"
                style="@style/cat"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row4_col3"
                style="@style/cat"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row4_col4"
                style="@style/cat"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/cats_row5"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:layout_marginHorizontal="20dp"
            android:layout_below="@+id/cats_row4">
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/cat_row5_col0"
                 style="@style/cat"/>
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/cat_row5_col1"
                 style="@style/cat"/>
             <com.google.android.material.imageview.ShapeableImageView
                 android:id="@+id/cat_row5_col2"
                 style="@style/cat"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row5_col3"
                style="@style/cat"/>
            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/cat_row5_col4"
                style="@style/cat"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/cats_row6"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_marginHorizontal="20dp"
        android:layout_below="@+id/cats_row5">
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col0"
            style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col1"
            style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col2"
            style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col3"
            style="@style/cat"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/cat_row6_col4"
            style="@style/cat"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/birds"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_above="@id/game_fabRight"
        android:layout_marginHorizontal="20dp"
        android:layout_marginBottom="10dp">
       <com.google.android.material.imageview.ShapeableImageView
           android:id="@+id/bird0"
           style="@style/bird"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bird1"
            style="@style/bird"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bird2"
            style="@style/bird"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bird3"
            style="@style/bird"/>
        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/bird4"
            style="@style/bird"/>
    </LinearLayout>
    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_fabRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        android:layout_alignParentEnd="true"
        android:layout_gravity="end|bottom"
        android:src="@drawable/right"
        android:contentDescription="@string/app_name"
        android:clickable="true"
        tools:ignore="RelativeOverlap" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/game_fabLeft"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:clickable="true"
        android:contentDescription="@string/app_name"
        android:src="@drawable/left"/>
    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/main_score"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="16dp"
        android:text="@string/_000"
        android:textColor="@color/black"
        android:textSize="28sp"
        android:textStyle="bold"
        />
        
        
</RelativeLayout>